╚═════╝ ╚══════╝╚═╝     ╚══════╝ ╚═════╝    ╚═╝   ╚═╝     ╚═╝╚══════╝╚═╝  ╚═══╝   ╚═╝"



declare -a options=(
	"Docker Compose Up"
	"Docker Compose Down"
	"quit"
)

echo

echo $(uname) ": Hi 😊 ! please make a selection."

echo

select option in "${options[@]}"

do

  case ${option} in

    # Choice : 1
    "Docker Compose Up")
          echo "Docker Compose Up ...";
          docker-compose pull network-device-inventory && \
          docker-compose -f docker-compose/network-device-inventory.yml --env-file docker-compose/.env up -d
          break;;
    # Choice : 2
    "Docker Compose Down")
          echo "Docker Compose Down ...";
          docker-compose -f docker-compose/network-device-inventory.yml down
          break;;
    # Choice : 3
    quit)
          echo $(uname) ": Bye !" ;
          break;;

    # Choice : Default
    *)
          echo $(uname) ": I'm not sure what that is O.Ô !"
  esac

done